@model IEnumerable<HastaneOtomasyon.Models.Personel>

@{
    ViewData["Title"] = "PersonelListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>PersonelListele</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                AD
            </th>
            <th>
                SOYAD
            </th>
            <th>
                EMAIL
            </th>
            <th>
                SIFRE
            </th>
            <th>
                BIRIM
            </th>
            <th>
                TCNO
            </th>
            <th>
                MAAS
            </th>
            <th>
                STATUS
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Ad
                </td>
                <td>
                    @item.Soyad
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Sifre
                </td>
                <td>
                    @item.Birim
                </td>
                <td>
                    @item.TcNo
                </td>
                <td>
                    @item.Maas
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    <a class="btn btn-success" asp-action="PersonelGuncelle" asp-route-id="@item.Id">Personel Güncelle</a> |
                    <a class="btn btn-success" asp-action="PersoneliSil" asp-route-id="@item.Id">Personel Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
